extends /layout/_default-layout

prepend config-block
  - page_name = 'DeepAR'

prepend stylesheet-block
  link(rel="stylesheet" href='/deepar/style.css')
  link(rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.css")

prepend javascript-block
  script(src="https://unpkg.com/swiper/swiper-bundle.js")
  script(type='text/javascript' src='/lib/deepar/deepar.js')
  script(type='text/javascript' src='/deepar/script.js')

block content-block
  canvas#deepar-canvas.deepar(oncontextmenu='event.preventDefault()')
  #loader-wrapper
    span.loader

  // Carousel
  .swiper-wrapper
    .swiper
      .swiper-container
        .swiper-wrapper
          .swiper-slide
            img.swiper-slide-thumb(src='/img/deepar/samples/galaxy.png')
          .swiper-slide
            img.swiper-slide-thumb(src='/img/deepar/samples/aviators.png')
          .swiper-slide
            img.swiper-slide-thumb(src='/img/deepar/samples/beard.png')
          .swiper-slide
            img.swiper-slide-thumb(src='/img/deepar/samples/dalmatian.png')
          .swiper-slide
            img.swiper-slide-thumb(src='/img/deepar/samples/flowers.png')
          .swiper-slide
            img.swiper-slide-thumb(src='/img/deepar/samples/koala.png')
          .swiper-slide
            img.swiper-slide-thumb(src='/img/deepar/samples/lion.png')
          .swiper-slide
            img.swiper-slide-thumb(src='/img/deepar/samples/teddy_cigar.png')
      .swiper-pagination